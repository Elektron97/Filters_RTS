#-----------------------------------------------------------------------
# This is the Makefile for compilation of Skeet_Shooting.c
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Target file to be compiled by default
#-----------------------------------------------------------------------
MAIN = rts
#-----------------------------------------------------------------------
# CC is the compiler to be used
#-----------------------------------------------------------------------
CC = gcc
#-----------------------------------------------------------------------
# CFLAGS are the options passed to the compiler
#-----------------------------------------------------------------------
CFLAGS = -Wall -lpthread -lrt
#-----------------------------------------------------------------------
OBJ1 = plib
OBJ2 = tlib
OBJS = $(MAIN).o $(OBJ1).o $(OBJ2).o
#-----------------------------------------------------------------------
# LIBS are the external libraried to be used
#-----------------------------------------------------------------------
LIBS = -lpthread -lrt -lm `allegro-config --libs`
#-----------------------------------------------------------------------
# Dependencies
#-----------------------------------------------------------------------
$(MAIN): $(OBJS)
	$(CC) $(CFLAGS) -o $(MAIN) $(OBJS) $(LIBS)

$(MAIN).o: $(MAIN).c
	$(CC) $(CFLAGS) -c $(MAIN).c

$(OBJ1).o: $(OBJ1).c
	$(CC) $(CFLAGS) -c $(OBJ1).c

$(OBJ2).o: $(OBJ2).c
	$(CC) $(CFLAGS) -c $(OBJ2).c

clean:
	rm *.o $(MAIN)
